/*! @brief The patch part of the version number. */
# define MAM_VERSION_PATCH @MAM_VERSION_PATCH@
/*! @brief The version number as a string. */
# define MAM_VERSION "@MAM_VERSION_MAJOR@.@MAM_VERSION_MINOR@.@MAM_VERSION_PATCH@"

